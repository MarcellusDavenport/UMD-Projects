import java.util.Scanner;

public class SportsQuiz {

	public static void main(String[] args) {
	    
		
		int BASEBALL = 9;
		int FOOTBALL = 11;
		int BASKETBALL = 5;
		int CURLING = 4;
		
		System.out.println("Enter 1 to guess a sport, 2 to guess how many players:");
		Scanner sc = new Scanner(System.in);
		int choice = sc.nextInt();
		
		if (choice == 1) {
			System.out.println("Choose number of players:");
			int numPlayers = sc.nextInt();
			if ((numPlayers == BASEBALL) || (numPlayers == FOOTBALL) || (numPlayers == BASKETBALL)
			   || (numPlayers == CURLING)) {
				System.out.println("Which sport has " + numPlayers + " players?");
				sc.nextLine();
				String guessedSport = sc.nextLine();
				if ((guessedSport == "Football") && (numPlayers == FOOTBALL)) {
					System.out.println("Correct");
				} else if ((guessedSport == "Baseball") && (numPlayers == BASEBALL)) {
					System.out.println("Correct");
				} else if ((guessedSport == "Basketball") && (numPlayers == BASKETBALL)) {
					System.out.println("Correct");
				} else if ((guessedSport == "Curling") && (numPlayers == CURLING)) {
					System.out.println("Correct");
				} else {
					System.out.println("Incorrect");
				}
				
			} else {
				System.out.println("Invalid choice");
			}
		} else {
			
		}
		
		
		
	}
}
